<PongBall>:
    size: 50,50
    canvas:
        Ellipse:
            pos: self.pos
            size : self.size

<PongPaddle>:
    size: 200,25
    canvas:
        Rectangle:
            pos: self.pos
            size : self.size



<PongGame>:
    ball : pong_ball
    player1 : player_left
    player2 : player_right

    canvas:
        Rectangle:
            pos: 0,self.center_y-5
            size: self.width,10
    Label:
        font_size: 70
        center_y : root.height/2 - 50
        center_x: root.width - 50
        top : root.top - root.top *3/4
        text: str(root.player2.score)

    Label:
        font_size: 70
        center_y : root.height/2+50
        center_x: root.width - 50
        top : root.top - root.top/4
        text: str(root.player1.score)

    PongBall:
        id: pong_ball
        center : self.parent.center

    PongPaddle:
        id : player_left
        center_x : root.center_x
        y : root.height-self.height

    PongPaddle:
        id : player_right
        y : 0
        center_x : root.center_x